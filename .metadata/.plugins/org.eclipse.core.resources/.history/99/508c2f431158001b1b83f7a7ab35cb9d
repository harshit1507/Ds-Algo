package stack;
import java.util.*;
import java.io.*;
public class Test {

	
	static int top = -1;
    
	public static void push(char stack[], char value, int n)
    {
      if(top == n-1)
      {
        System.out.println("Overflow");
        return;
      }
      
      top++;
      stack[top] = value;
    }
    
    public static int code(char stack[], int n)
    {
      int open = 0;
      int close = 0;
      int res = 0;
      for(int i=0;i<n;i++)
      {
        if(open == close && stack[i] == '>')
          return res;
        else if(stack[i] == '<')
          open++;
        else
        {
          close++;
          if(open == close)
            res = close*2;
        }
      }
      return res;
    }
    
	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner sc = new Scanner(System.in);
	      int t = sc.nextInt();
	      while(t-->0)
	      {
	        int n = sc.nextInt();
	        char stack[] = new char[n];
	        char value;
	        for(int i=0;i<n;i++)
	        {
	          value = sc.next().charAt(0);
	          push(stack,value,n);
	        }  
	        
	        int res = code(stack,n);
	        System.out.println(res);
	        top = -1;
	      }
	      sc.close();
	}

}
